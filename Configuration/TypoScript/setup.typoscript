
plugin.tx_fsfzollertextmedia_zollertextmedia {
    view {
        templateRootPaths.0 = EXT:fsf_zoller_textmedia/Resources/Private/Templates/
        templateRootPaths.1 = {$plugin.tx_fsfzollertextmedia_zollertextmedia.view.templateRootPath}
        partialRootPaths.0 = EXT:fsf_zoller_textmedia/Resources/Private/Partials/
        partialRootPaths.1 = {$plugin.tx_fsfzollertextmedia_zollertextmedia.view.partialRootPath}
        layoutRootPaths.0 = EXT:fsf_zoller_textmedia/Resources/Private/Layouts/
        layoutRootPaths.1 = {$plugin.tx_fsfzollertextmedia_zollertextmedia.view.layoutRootPath}
    }
    persistence {
        storagePid = {$plugin.tx_fsfzollertextmedia_zollertextmedia.persistence.storagePid}
        #recursive = 1
    }
    features {
        #skipDefaultArguments = 1
        # if set to 1, the enable fields are ignored in BE context
        ignoreAllEnableFieldsInBe = 0
        # Should be on by default, but can be disabled if all action in the plugin are uncached
        requireCHashArgumentForActionArguments = 1
    }
    mvc {
        #callDefaultActionIfActionCantBeResolved = 1
    }
}

# these classes are only used in auto-generated templates
plugin.tx_fsfzollertextmedia._CSS_DEFAULT_STYLE (
    textarea.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    input.f3-form-error {
        background-color:#FF9F9F;
        border: 1px #FF0000 solid;
    }

    .tx-fsf-zoller-textmedia table {
        border-collapse:separate;
        border-spacing:10px;
    }

    .tx-fsf-zoller-textmedia table th {
        font-weight:bold;
    }

    .tx-fsf-zoller-textmedia table td {
        vertical-align:top;
    }

    .typo3-messages .message-error {
        color:red;
    }

    .typo3-messages .message-ok {
        color:green;
    }
)

page{
	includeCSS{
		fsfzollertextmedia =  EXT:fsf_zoller_textmedia/Resources/Public/css/fsf_zoller_textmedia.css
      
	}
	includeJSFooterlibs {
        fsfzollertextmedia =  EXT:fsf_zoller_textmedia/Resources/Public/js/main.js
    }
}

